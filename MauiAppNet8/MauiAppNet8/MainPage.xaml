<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="MauiAppNet8.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <cv:CameraView Grid.Row="0" Grid.Column="0" x:Name="cameraView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
        <Image Grid.Row="0" Grid.Column="1" BackgroundColor="Pink" x:Name="ImagePreview" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        <Label Grid.Row="0" Grid.Column="1" Text="Tap the Capture button below!!" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0"  Text="Capture" x:Name="CaptureButton" HorizontalOptions="FillAndExpand" />
    </Grid>

</ContentPage>
